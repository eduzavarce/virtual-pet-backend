# Pets Application environment template
# Copy this file to .env and adjust values as needed for your environment.
# Example: cp template.env .env

# --- PostgreSQL ---
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=pets
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgrespassword

# --- RabbitMQ ---
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# RabbitMQ domain event bus configuration
RABBITMQ_EXCHANGE=domain-events
RABBITMQ_ROUTING_PREFIX=events
RABBITMQ_QUEUE_USER_CREATED_LOG=user-created-log.q
RABBITMQ_QUEUE_USER_CREATED_PETS=user-created-pets.q

# --- Security / JWT ---
# WARNING: Change these values in non-dev environments
JWT_SECRET=dev-secret-change-me
# Milliseconds (default 1 hour)
JWT_EXPIRATION=3600000

# --- CORS ---
# Comma-separated list of allowed origins; Spring will parse single value as list
CORS_ALLOWED_ORIGINS=http://localhost:5173
